<%- include('../partials/header')%>
<div class="text-center">
  <h1>Edit <%= campground.name %></h1>
</div>

<div class="container">
  <div class="d-flex flex-row justify-content-center">
    <div class="col-md-auto ">
      <form action="/camps/<%= campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="campground[name]"
            id=""
            value="<%= campground.name%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="campground[image]"
            id=""
            value="<%= campground.image%>"
          />
        </div>
        <div class="form-group">
          <textarea class="form-control" name="campground[description]" id="">
<%= campground.description%>"</textarea
          >
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary" type="submit">submit</button>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 m-1">
      <a href="/camps">Go back</a>
    </div>
  </div>
</div>

<%- include('../partials/footer')%>
