
<%- include('partials/header')%>

<div class="container">
  <header class="jumbotron">
    <h1 class="display-4">Welcome to YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <button class="btn btn-lg btn-primary">learn more</button>
  </header>
  <div class="row">
    
  <% campgrounds.forEach(function(camp){ %>
    <div class="col">

            <div class="thumbnail">
                <img src="<%= camp.image %>" alt="campground">
            </div>
            <div class="caption">
              <h4><%= camp.name %></h4>
            </div>
        
    </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer')%>